<h1><%= t('view.todotasks.show') %></h1>
<%= @todotask.name %>
<%= @todotask.content %>
<%= @todotask.deadline.year %>-<%= @todotask.deadline.month %>-<%= @todotask.deadline.day %>
<% if @todotask.status == 1 %>
  <%= t('view.todotasks.status_1') %>
<% elsif @todotask.status == 2 %>
  <%= t('view.todotasks.status_2') %>
<% else %>
  <%= t('view.todotasks.status_3') %>
<% end %>

<% if @todotask.priority == 1 %>
  <%= t('view.todotasks.priority_high') %>
<% elsif @todotask.priority == 2 %>
  <%= t('view.todotasks.priority_middle') %>
<% else %>
  <%= t('view.todotasks.priority_low') %>
<% end %>
