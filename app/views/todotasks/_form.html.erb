<%= form_with(model:@todotask, local:true) do |f| %>
  <% if @todotask.errors.any? %>
    <% @todotask.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :status %>
  <%= f.select :status,[["未着手",1], ["着手", 2], ["完了", 3]] %>

  <%= f.label :deadline %>
  <%= f.date_select :deadline, default:Date.new(2020,1,1) %>

  <%= f.label :priority %>
  <%= f.select :priority,[["高", 1], ["中", 2], ["低", 3]] %>

  <%= f.submit %>
<% end %>
