<%= form_with(model:@group, local: true) do |f| %>
  <% if @group.errors.any? %>
    <% @group.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.hidden_field :owner_id, value: current_user.id %>
  <%= f.submit %>
<% end %>
