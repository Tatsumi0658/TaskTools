<h1>Groups#index</h1>
<p>Find me in app/views/groups/index.html.erb</p>
<% @groups.each do |group| %>
  <%= group.name %>
  <%= link_to "参加する", usergroups_path(group_id: group.id), method: :post, class:"btn btn-primary" %>
  <%= link_to "詳細", group_path(group.id), class: "btn btn-info" %>
  <%= link_to "編集", edit_group_path(group.id), class: "btn btn-light" %>
  <%= link_to "削除", group_path(group.id), method: :delete, class: "btn btn-danger" %>
<% end %>
