<h2><%= t('view.users.index') %></h2>
<%= link_to t('view.users.new'), new_admin_user_path, class:"btn btn-success" %>
<table class="table mt-5">
  <thead class="thead-dark text-center">
    <tr>
      <th><%= t('view.users.id') %></th>
      <th><%= t('view.users.name') %></th>
      <th><%= t('view.users.count') %></th>
      <th><%= t('view.show') %></th>
      <th><%= t('view.edit') %></th>
      <th><%= t('view.delete') %></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td class="text-center"><%= user.id %></td>
    <td><%= user.name %></td>
    <td class="text-center"><%= user.todotasks.count %></td>
    <td class="text-center"><%= link_to t('view.show'), admin_user_path(id: user.id), class:"btn btn-info" %></td>
    <td class="text-center"><%= link_to t('view.edit'), edit_admin_user_path(id: user.id), class:"btn btn-secondary" %></td>
    <td class="text-center"><%= link_to t('view.delete'), admin_user_path(id: user.id), method: :delete, class:"btn btn-danger" %></td>
  </tr>
  <% end %>
</table>
