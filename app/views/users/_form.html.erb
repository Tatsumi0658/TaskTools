<%= form_with(model:@user, local:true, class:"col-md-8 col-xs-12 mx-auto") do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
  <% end %>

  <%= f.label :name, class:"mt-4"%>
  <%= f.text_field :name, class:"form-control" %>

  <%= f.label :email, class:"mt-4" %>
  <%= f.text_field :email, class:"form-control" %>

  <%= f.label :password, class:"mt-4" %>
  <%= f.password_field :password, class:"form-control" %>

  <%= f.label :password_confirmation, class:"mt-4" %>
  <%= f.password_field :password_confirmation, class:"form-control" %>

  <%= f.submit class:"d-block btn btn-primary mt-4 mx-auto" %>
<% end %>
